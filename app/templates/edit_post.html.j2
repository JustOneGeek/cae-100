{% extends './base.html.j2' %}

{% block title %}
    Edit Post
{% endblock %}

{% block content %}
    <form method="POST" action="{{url_for('social.edit_post', id=post.id)}}" class="mb-5">
        <div class="mb-1">
           <textarea class="form-control"
                name="body"
                style="height: 100px"
           >{{post.body}}</textarea> 
        </div>
        <button type="submit" class="btn btn-primary"><i class="bi bi-send-check-fill"></i>&nbsp; Submit Edit</button>
    </form>

{% endblock %}